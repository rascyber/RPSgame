<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".TerribleActivityFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <com.linecorp.reviewexam.rockpaperscissors.RockButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rock_button"
                android:layout_weight="1"
                tools:ignore="NestedWeights" />
            <com.linecorp.reviewexam.rockpaperscissors.ScissorsButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scissors_button"
                android:layout_weight="1"/>
            <com.linecorp.reviewexam.rockpaperscissors.PaperButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/paper_button"
                android:layout_weight="1"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
